<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar o Alarme"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnAgendar5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendar para 5 segundos"
                android:layout_marginTop="16dp"/>

        <Button
                android:id="@+id/btnAgendarRepeat30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agendar e repetir a cada 30 segundos"
                android:layout_marginTop="16dp"/>

        <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar Agendamento"
                android:layout_marginTop="16dp"/>

    </LinearLayout>



</LinearLayout>