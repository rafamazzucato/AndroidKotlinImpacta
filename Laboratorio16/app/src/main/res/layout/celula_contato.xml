<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp">

    <TextView
            android:id="@+id/labelNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nome:"/>
    <TextView
            android:id="@+id/contatoNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/labelNome"
            android:layout_toRightOf="@+id/labelNome"/>

    <TextView
            android:id="@+id/labelIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/contatoIdade"
            android:layout_toLeftOf="@+id/contatoIdade"
            android:text="Idade:"/>

    <TextView
            android:id="@+id/contatoIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

</RelativeLayout>